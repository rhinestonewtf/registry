pragma solidity ^0.8.19;

import { IExternalSchemaValidator } from "../IExternalSchemaValidator.sol";
import { AttestationRequest } from "../../DataTypes.sol";

/**
 * @title SimpleValidator
 * @author zeroknots
 * @notice A simple validator that always returns true.
 */
contract SimpleValidator is IExternalSchemaValidator {
    function validateSchema(AttestationRequest calldata attestation)
        external
        pure
        override
        returns (bool)
    {
        return true;
    }

    function validateSchema(AttestationRequest[] calldata attestation)
        external
        pure
        override
        returns (bool)
    {
        return true;
    }

    function supportsInterface(bytes4 interfaceID) external view override returns (bool) { }
}
